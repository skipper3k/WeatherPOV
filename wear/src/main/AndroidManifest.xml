<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.skipper3k.si.weatherpov" >

    <uses-feature android:name="android.hardware.type.watch" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@android:style/Theme.DeviceDefault" >
        <activity
            android:name=".WeatherPOVBroadcastActivity"
            android:label="WeatherPOVBroadcastActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".WeatherPOVDisplayActivity"
            android:allowEmbedded="true"
            android:exported="true"
            android:taskAffinity=""
            android:theme="@android:style/Theme.DeviceDefault.Light" >
        </activity>

        <receiver
            android:name=".WeatherPOVNotificationReceiver"
            android:exported="true" >
            <intent-filter>
                <action android:name="com.skipper3k.si.weatherpov.SHOW_NOTIFICATION" />
            </intent-filter>
        </receiver>
    </application>

</manifest>
